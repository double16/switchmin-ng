{
  "engines": {
	"node": "0.10.x"  
  },
  "name": "switchmin-ng",
  "private": true,
  "version": "0.0.1",
  "description": "Digital switching function minimize",
  "repository": "https://github.com/double16/switchmin-ng",
  "license": "MIT",
  "main": "scripts/http-server.js",
  "dependencies": {
    "bower": "^1.3.1"
  },
  "devDependencies": {
    "karma": "~0.12",
    "protractor": "~1.6",
    "http-server": "^0.6.1",
    "shelljs": "^0.2.6",
    "karma-junit-reporter": "~0.2.2",
    "karma-jasmine": "~0.3.5",
    "karma-phantomjs-launcher": "~0.1",
    "karma-chrome-launcher": "",
    "karma-firefox-launcher": "",
    "karma-coverage": "~0.2",
    "sauce-connect-launcher": "^0.9",
    "q": "^1"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "http-server ./app -a ${IP-localhost} -p ${PORT-8080}",

    "pretest": "npm install",
    "test": "node_modules/karma/bin/karma start test/karma.conf.js",
    "test-single-run": "node_modules/karma/bin/karma start test/karma.conf.js  --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/protractor-conf.js",

    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + cat('app/bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
  }
}
